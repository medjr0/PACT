<style>
	a {
		color: black; 
		text-decoration: none;
	}
	a:hover {
		color: blue;
	}
</style>
<div class="container">
	<% if (finished) { %>
		<div class="alert alert-primary" role="alert">Plus de services à modérer. Bonne journée !</div>
	<% } %>
	<% if (deleted) { %>
		<div class="alert alert-danger" role="alert">Service supprimé !</div>
	<% } %>
	<% if (approved) { %>
		<div class="alert alert-success" role="alert">Service validé !</div>
	<% } %>
	<% for(var i=0; i < data.length; i++) { %>
		<% if (data[i]) { %>
			<div class="row">
				<div class="col-md-8">
					<div class="card mb-3">
						<div class="row">
							<div class="col-md-3">
								<img class="img-fluid mx-2 my-4" src="<%= data[i]["logo"] %>" />
							</div>
							<div class="col-md-9">
								<div class="card-body">		
									<h3 class="card-title">
										<a href="service/<%= data[i]["id"] %>">
											<%= data[i]["title"] %>
										</a>
									</h3>
									<h6>
										<i class="bi bi-geo-alt-fill"></i>
										<%= data[i]["address"] %>
									</h6>
									<p class="card-text"><%= data[i]["description"] %></p>
									<a href="approve/<%= data[i]["id"] %>" class="btn btn-success">Valider</a>
									<a href="rm/<%= data[i]["id"] %>" class="btn btn-danger">Supprimer</a>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		<% } %>
	<% } %>
</div>