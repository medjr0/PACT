<!doctype html>
<html lang="en">
 	<head>
   	<!-- Required meta tags -->
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
	<!-- Bootstrap CSS -->
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
		<title>Inscription</title>
	</head>
	<body>
		<div class="container mt-5">
			<h2>Inscription :</h2>
			<form class="mt-4 mb-3 mx-3" action="/signup" method="post">
				<div class="row">
					<div class="col-md-4 x-3 py-3 m-3 border rounded">
						<h4>Informations de connexion :</h4>
						<div class="mb-3">
							<label for="inputName" class="form-label">Nom</label>
							<input type=text class="form-control" id="inputName" name="name" required>
						</div>
						<div class="mb-3">
							<label for="inputEmail" class="form-label">Mail</label>
							<input type=email class="form-control" id="inputEMail" name="email" required>
						</div>
						<div class="mb-3">
							<label for="inputPassword" class="form-label">Password</label>
							<input type=password class="form-control" id="inputPassword" name="password" required>
						</div>
					</div>
					<div class="col-md-7 x-3 p-3 m-3 border rounded">
						<h4>Informations pour les utilisateurs :</h4>
						<div class="mb-3">
							<label for="inputTel" class="form-label">Numéro de téléphone</label>
							<input type=tel class="form-control" id="inputTel" name="phone">
						</div>
						<div class="mb-3">
							<label for="inputContactEMail" class="form-label">Mail de contact</label>
							<input type=email class="form-control" id="inputContactEMail" name="contact">
						</div>
						<div class="mb-3">
							<label for="inputAddress" class="form-label">Adresse</label>
							<input type="text" class="form-control" id="inputAddress" name="address">
						</div>
						<div class="mb-3">
							<label for="inputWebsite" class="form-label">Site Internet</label>
							<input type=url class="form-control" id="inputWebsite" name="website">
						</div>
					</div>
				</div>
				
				<button type="submit" class="btn btn-primary">Envoyer</button>
			</form>
		</div>
	<!-- Optional JavaScript; choose one of the two! -->
	<!-- Option 1: Bootstrap Bundle with Popper -->
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
