<!doctype html>
<html lang="en">
 	<head>
   	<!-- Required meta tags -->
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
	<!-- Bootstrap CSS -->
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
		<title>Hello, world!</title>
	</head>
	<body>
		<div class="container">
			<% if (finished) { %>
				<div class="alert alert-primary" role="alert">Plus de services à modérer. Bonne journée !</div>
			<% } %>
			<% if (deleted) { %>
				<div class="alert alert-danger" role="alert">Service supprimé !</div>
			<% } %>
			<% if (approved) { %>
				<div class="alert alert-success" role="alert">Service validé !</div>
			<% } %>
			<% for(var i=0; i < data["services"].length; i++) { %>
				<% if (data["services"][i]) { %>
					<div class="row">
						<div class="col-md-8">
							<div class="card mb-3">
								<div class="row">
									<div class="col-md-3">
										<img class="img-fluid mx-2 my-4" src="<%= data["services"][i]["logo"] %>" />
									</div>
									<div class="col-md-9">
										<div class="card-body">		
											<h3 class="card-title"><%= data["services"][i]["title"] %></h3>
											<h6>
												<i class="bi bi-geo-alt-fill"></i>
												<%= data["services"][i]["adress"] %>
											</h6>
											<p class="card-text"><%= data["services"][i]["description"] %></p>
											<a href="approve/<%= data["services"][i]["id"] %>" class="btn btn-success">Valider</a>
											<a href="rm/<%= data["services"][i]["id"] %>" class="btn btn-danger">Supprimer</a>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				<% } %>
			<% } %>
		</div>
	<!-- Optional JavaScript; choose one of the two! -->
	<!-- Option 1: Bootstrap Bundle with Popper -->
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
	<!-- Option 2: Separate Popper and Bootstrap JS -->
